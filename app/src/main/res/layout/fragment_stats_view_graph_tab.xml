<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.neverdark.csm.fragments.StatsViewGraphTabFragment"
    android:orientation="vertical"
    android:padding="16dp">

    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/altitude_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/textColorHints"/>

    <lecho.lib.hellocharts.view.PreviewLineChartView
        android:id="@+id/preview_altitude_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
