<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/distance"
            style="@style/LeftStatCardField"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_distance"
            android:drawableStart="@drawable/ic_distance"
            android:text="10 км 250 м" />

        <TextView
            android:id="@+id/finish_time"
            style="@style/RightStatCardField"
            android:layout_marginTop="16dp" />

        <ImageView
            android:id="@+id/map_snapshot"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@+id/distance"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/duration"
            style="@style/RightStatCardField"
            android:layout_below="@+id/map_snapshot"
            android:drawableLeft="@drawable/ic_duration"
            android:drawableStart="@drawable/ic_duration"
            android:text="00:15:00" />

        <TextView
            android:id="@+id/average_speed"
            style="@style/LeftStatCardField"
            android:layout_below="@id/map_snapshot"
            android:drawableLeft="@drawable/ic_avgspeed"
            android:drawableStart="@drawable/ic_avgspeed"
            android:text="12,5 км/ч" />

    </RelativeLayout>
</android.support.v7.widget.CardView>