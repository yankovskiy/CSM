<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/distance"
            style="@style/LeftStatCardField"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_distance"
            android:drawableStart="@drawable/ic_distance"
            android:text="10 км 250 м" />

        <TextView
            android:id="@+id/finish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:text="Чт, 28.12.2017"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/map_snapshot"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@+id/distance"
            android:layout_marginTop="8dp" />

        <TextView
            style="@style/RightStatCardField"
            android:id="@+id/duration"
            android:layout_below="@+id/map_snapshot"
            android:drawableLeft="@drawable/ic_duration"
            android:drawableStart="@drawable/ic_duration"
            android:text="00:15:00" />

        <TextView
            style="@style/LeftStatCardField"
            android:id="@+id/average_speed"
            android:layout_below="@id/map_snapshot"
            android:drawableLeft="@drawable/ic_avgspeed"
            android:drawableStart="@drawable/ic_avgspeed"
            android:text="12,5 км/ч" />

    </RelativeLayout>
</android.support.v7.widget.CardView>