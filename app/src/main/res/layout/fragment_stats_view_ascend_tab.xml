<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <android.support.v7.widget.CardView
            android:id="@+id/time_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/total_time"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/delemiter2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/time"
                    android:background="@color/textColorHints" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/delemiter2"
                    android:padding="8dp">

                    <lecho.lib.hellocharts.view.PieChartView
                        android:id="@+id/time_chart"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerVertical="true" />

                    <ru.neverdark.widgets.Legend
                        android:id="@+id/ascend_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/time_chart"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@+id/time_chart"
                        android:layout_toRightOf="@+id/time_chart"
                        app:color="@color/orange_400"
                        app:title="@string/to_up" />

                    <ru.neverdark.widgets.Legend
                        android:id="@+id/descend_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/ascend_time"
                        android:layout_alignStart="@+id/ascend_time"
                        android:layout_below="@+id/ascend_time"
                        android:layout_marginTop="8dp"
                        app:color="@color/light_green_400"
                        app:title="@string/to_down" />

                    <ru.neverdark.widgets.Legend
                        android:id="@+id/plain_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/descend_time"
                        android:layout_alignStart="@+id/descend_time"
                        android:layout_below="@+id/descend_time"
                        android:layout_marginTop="8dp"
                        app:color="@color/blue_400"
                        app:title="@string/to_plain" />
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/distance_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_card"
            android:layout_marginTop="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/distance"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/delemiter"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/distance"
                    android:background="@color/textColorHints" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/delemiter"
                    android:padding="8dp">

                    <lecho.lib.hellocharts.view.PieChartView
                        android:id="@+id/distance_chart"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerVertical="true" />

                    <ru.neverdark.widgets.Legend
                        android:id="@+id/up_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/distance_chart"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@+id/distance_chart"
                        android:layout_toRightOf="@+id/distance_chart"
                        app:color="@color/orange_400"
                        app:title="@string/to_up" />

                    <ru.neverdark.widgets.Legend
                        android:id="@+id/down_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/up_distance"
                        android:layout_alignStart="@+id/up_distance"
                        android:layout_below="@+id/up_distance"
                        android:layout_marginTop="8dp"
                        app:color="@color/light_green_400"
                        app:title="@string/to_down" />

                    <ru.neverdark.widgets.Legend
                        android:id="@+id/plain_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/up_distance"
                        android:layout_alignStart="@+id/up_distance"
                        android:layout_below="@+id/down_distance"
                        android:layout_marginTop="8dp"
                        app:color="@color/blue_400"
                        app:title="@string/to_plain" />
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/max_gradient_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distance_card"
            android:layout_marginTop="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/max_gradient_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/max_gradient"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/delemiter3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/max_gradient_title"
                    android:background="@color/textColorHints" />

                <TextView
                    android:id="@+id/max_ascend_gradient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/delemiter3"
                    android:layout_margin="16dp"
                    android:drawableLeft="@drawable/ic_ascend"
                    android:drawablePadding="16dp"
                    android:drawableStart="@drawable/ic_ascend"
                    android:gravity="center_vertical"
                    android:text="@string/to_up"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/max_ascend_gradient_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/max_ascend_gradient"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="16dp"
                    android:text="@string/zero"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/max_descend_gradient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/max_ascend_gradient"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:drawableLeft="@drawable/ic_descend"
                    android:drawablePadding="16dp"
                    android:drawableStart="@drawable/ic_descend"
                    android:gravity="center_vertical"
                    android:text="@string/to_down"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/max_descend_gradient_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/max_descend_gradient"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:text="@string/zero"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/max_gradient_card"
            android:layout_marginTop="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/avg_gradient_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/avg_gradient"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/delemiter4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/avg_gradient_title"
                    android:background="@color/textColorHints" />

                <TextView
                    android:id="@+id/avg_ascend_gradient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/delemiter4"
                    android:layout_margin="16dp"
                    android:drawableLeft="@drawable/ic_ascend"
                    android:drawablePadding="16dp"
                    android:drawableStart="@drawable/ic_ascend"
                    android:gravity="center_vertical"
                    android:text="@string/to_up"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/avg_ascend_gradient_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/avg_ascend_gradient"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="16dp"
                    android:text="@string/zero"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/avg_descend_gradient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/avg_ascend_gradient"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:drawableLeft="@drawable/ic_descend"
                    android:drawablePadding="16dp"
                    android:drawableStart="@drawable/ic_descend"
                    android:gravity="center_vertical"
                    android:text="@string/to_down"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/avg_descend_gradient_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/avg_descend_gradient"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:text="@string/zero"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>